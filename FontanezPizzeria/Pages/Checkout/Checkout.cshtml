@page
@model FontanezPizzeria.Pages.Checkout.Checkout
@{
}

<h1>Your Order!</h1>
@{
    var imagePath = "~/images/Pizzas/" + @Model.ImageTitle + ".png";
}
<div class="align-items-center">
    <div class="col-3 mx-auto mb-5">
        <img src=@imagePath class="w-100" asp-append-version="true" alt="Pizza Picture">
        <p>Your order for the @Model.PizzaName Pizza is ready!</p>
        <p>Your total price for your order is: $@Model.PizzaPrice</p>
        <br/>
        <a class="btn alert-primary mt-1 mx-auto" asp-area="" asp-page="ThankYou">Confirm Order</a>
    </div>
</div>
